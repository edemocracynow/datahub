{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"paths": {
			"@core": [
				"libs/core/src"
			]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"paths": {
				"@core": [
					"libs/core/src"
				]
			},
			"module": "CommonJS",
			"target": "es2017"
		}
	}
}